# LOCALTRIAGE Environment Configuration
# Copy to .env and customize for your environment

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=localtriage
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# =============================================================================
# Vector Store Configuration
# =============================================================================
# Options: faiss, qdrant
VECTOR_STORE_TYPE=qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=kb_chunks

# FAISS index path (if using FAISS)
FAISS_INDEX_PATH=./data/indices/kb_faiss.index

# =============================================================================
# LLM Configuration
# =============================================================================
# Enable/disable LLM for drafting
USE_LLM=true

# LLM API endpoint (OpenAI-compatible)
LLM_BASE_URL=http://localhost:8000/v1
LLM_MODEL=Qwen/Qwen2.5-14B-Instruct
LLM_API_KEY=not-needed-for-local

# LLM parameters
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=120

# =============================================================================
# Embedding Configuration
# =============================================================================
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
EMBEDDING_DEVICE=cpu
# Options: cpu, cuda, mps

# Remote embedding service (optional)
EMBEDDING_BASE_URL=http://localhost:8001/v1

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
LOG_LEVEL=INFO

# =============================================================================
# Retrieval Configuration
# =============================================================================
# Top-k results for retrieval
RETRIEVAL_TOP_K=5

# Hybrid retrieval weights
DENSE_WEIGHT=0.7
SPARSE_WEIGHT=0.3

# Reranking
ENABLE_RERANKING=false
RERANKER_MODEL=BAAI/bge-reranker-base

# =============================================================================
# Classification/Routing Configuration
# =============================================================================
# Supported categories
CATEGORIES=Billing,Technical,Account,Shipping,Returns,Product,General

# Confidence threshold for routing
ROUTING_CONFIDENCE_THRESHOLD=0.6

# =============================================================================
# Hugging Face (for model downloads)
# =============================================================================
# HF_TOKEN=your_huggingface_token_here
HUGGINGFACE_HUB_CACHE=./models/hf_cache

# =============================================================================
# Monitoring (Optional)
# =============================================================================
PROMETHEUS_ENABLED=false
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# Development
# =============================================================================
DEBUG=false
RELOAD=false
